Set version=@VERSION_MAJOR@.@VERSION_MINOR@.@VERSION_PATCH@

Set sourcePackage=@PACKAGE_NAME@-%version%-src
Set prebuiltPackage32=@PACKAGE_NAME@-%version%-msvc13_x86
Set prebuiltPackage64=@PACKAGE_NAME@-%version%-msvc13_x64

mkdir "%sourcePackage%"
mkdir "%prebuiltPackage32%"
mkdir "%prebuiltPackage32%/bin"
mkdir "%prebuiltPackage64%"
mkdir "%prebuiltPackage64%/bin"

REM SOURCE PACKAGE

xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/argParser" "@CMAKE_BINARY_DIR@/%sourcePackage%/argParser"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/compression" "@CMAKE_BINARY_DIR@/%sourcePackage%/compression"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/iniParser" "@CMAKE_BINARY_DIR@/%sourcePackage%/iniParser"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/sockets" "@CMAKE_BINARY_DIR@/%sourcePackage%/sockets"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/include" "@CMAKE_BINARY_DIR@/%sourcePackage%/include"

xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/cmake_modules" "@CMAKE_BINARY_DIR@/%sourcePackage%/cmake_modules"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/config" "@CMAKE_BINARY_DIR@/%sourcePackage%/config"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/docs" "@CMAKE_BINARY_DIR@/%sourcePackage%/docs"
xcopy /F "@CMAKE_SOURCE_DIR@/CMakeLists.txt" "@CMAKE_BINARY_DIR@/%sourcePackage%/CMakeLists.txt*"
xcopy /F "@CMAKE_SOURCE_DIR@/LICENSE" "@CMAKE_BINARY_DIR@/%sourcePackage%/LICENSE*"

REM 32Bit package

xcopy /S /Y /I "@CMAKE_BINARY_DIR@/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage32%/include"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage32%/include"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/argParser/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage32%/include"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/compression/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage32%/include"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/iniParser/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage32%/include"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/sockets/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage32%/include"

xcopy /F "@CMAKE_BINARY_DIR@/bin/Release/clock_*.dll" "@CMAKE_BINARY_DIR@/%prebuiltPackage32%/bin/"
xcopy /F "@CMAKE_BINARY_DIR@/bin/Release/clock_*.lib" "@CMAKE_BINARY_DIR@/%prebuiltPackage32%/lib/"

xcopy /F "@CMAKE_SOURCE_DIR@/LICENSE" "@CMAKE_BINARY_DIR@/%prebuiltPackage32%/LICENSE*"

REM 64Bit package

xcopy /S /Y /I "@CMAKE_BINARY_DIR@/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage64%/include"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage64%/include"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/argParser/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage64%/include"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/compression/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage64%/include"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/iniParser/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage64%/include"
xcopy /S /Y /I "@CMAKE_SOURCE_DIR@/sockets/include" "@CMAKE_BINARY_DIR@/%prebuiltPackage64%/include"

xcopy /F "@CMAKE_BINARY_DIR@/bin/Release/clock_*.dll" "@CMAKE_BINARY_DIR@/%prebuiltPackage64%/bin/"
xcopy /F "@CMAKE_BINARY_DIR@/bin/Release/clock_*.lib" "@CMAKE_BINARY_DIR@/%prebuiltPackage64%/lib/"

xcopy /F "@CMAKE_SOURCE_DIR@/LICENSE" "@CMAKE_BINARY_DIR@/%prebuiltPackage64%/LICENSE*"

winrar a -afzip -df %sourcePackage%.zip %sourcePackage%
winrar a -afzip -df %prebuiltPackage32%.zip %prebuiltPackage32%
winrar a -afzip -df %prebuiltPackage64%.zip %prebuiltPackage64%